<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgMoviePoster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/NestedScrollView"
        android:layout_width="match_parent"
        android:src="@drawable/movie_poster"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/movie_poster_height"
        android:contentDescription="@string/movie_poster_img_description" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/NestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imgMoviePoster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLine_1"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/guideline_margin_begin_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvMovieCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideLine_1"
                app:layout_constraintEnd_toStartOf="@+id/tvMovieDate"
                android:layout_marginTop="@dimen/movie_category_margin_top"
                android:paddingTop="@dimen/movie_category_padding_top"
                android:paddingBottom="@dimen/movie_category_padding_bottom"
                android:paddingStart="@dimen/movie_category_padding_start"
                android:paddingEnd="@dimen/movie_category_padding_end"
                android:textSize="@dimen/movie_category_text_size"
                android:background="@drawable/bg_movie_category"
                android:textColor="@color/black"
                android:text="@string/movie_category"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tvMovieDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/movie_date_text_size"
                android:layout_marginStart="@dimen/movie_date_margin_start"
                android:text="@string/movie_date"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvMovieCategory"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/movie_date_margin_top"
                app:layout_constraintStart_toEndOf="@+id/tvMovieCategory"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvMovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_title"
                app:layout_constraintTop_toBottomOf="@+id/tvMovieCategory"
                app:layout_constraintStart_toStartOf="@id/guideLine_1"
                android:layout_marginTop="@dimen/movie_title_margin_top"
                android:textSize="@dimen/movie_title_text_size"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvMovieAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/guideLine_2"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/movie_age"
                android:padding="@dimen/movie_age_padding"
                android:layout_marginTop="@dimen/movie_age_margin_top"
                android:background="@drawable/bg_circle_age"
                android:textColor="@color/black"
                android:textSize="@dimen/movie_age_text_size"/>

            <LinearLayout
                android:id="@+id/llMovieRating"
                app:layout_constraintTop_toBottomOf="@+id/tvMovieTitle"
                app:layout_constraintStart_toStartOf="@id/guideLine_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/movie_rating_margin_top">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_active"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_active"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_active"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_active"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_no_active"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvMovieDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/movie_description_margin_top"
                android:text="@string/movie_description"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/guideLine_2"
                app:layout_constraintStart_toStartOf="@id/guideLine_1"
                app:layout_constraintTop_toBottomOf="@id/llMovieRating" />

            <TextView
                android:id="@+id/tvMovieActorsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/movie_actors_title_text_size"
                android:text="@string/actors"
                app:layout_constraintTop_toBottomOf="@+id/tvMovieDescription"
                app:layout_constraintStart_toStartOf="@id/guideLine_1"
                android:layout_marginTop="@dimen/movie_actors_title_margin_top"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvMovieActorsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/horizontal_scroll_view_margin_top"
                android:layout_marginBottom="@dimen/horizontal_scroll_view_margin_bottom">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/actor_item_margin_start_start">

                            <ImageView
                                android:layout_width="@dimen/actor_image_width"
                                android:layout_height="@dimen/actor_image_height"
                                android:src="@drawable/actor_1"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/actor_1_name"
                                android:textColor="@color/black"
                                android:textSize="@dimen/actor_name_text_size"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/actor_name_margin_top"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/actor_item_margin_start">

                        <ImageView
                            android:layout_width="@dimen/actor_image_width"
                            android:layout_height="@dimen/actor_image_height"
                            android:src="@drawable/actor_2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/actor_2_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/actor_name_text_size"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/actor_name_margin_top"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/actor_item_margin_start"
                        android:layout_marginEnd="@dimen/actor_item_margin_end">

                        <ImageView
                            android:layout_width="@dimen/actor_image_width"
                            android:layout_height="@dimen/actor_image_height"
                            android:src="@drawable/actor_3"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/actor_3_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/actor_name_text_size"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/actor_name_margin_top"/>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLine_2"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/guideline_margin_begin_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/menu_bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:labelVisibilityMode="unlabeled"/>

</androidx.constraintlayout.widget.ConstraintLayout>