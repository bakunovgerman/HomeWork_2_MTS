<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvPopularNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_movie_category"
        android:paddingStart="@dimen/movie_category_padding_start"
        android:paddingTop="@dimen/movie_category_padding_top"
        android:paddingEnd="@dimen/movie_category_padding_end"
        android:paddingBottom="@dimen/movie_category_padding_bottom"
        android:layout_marginStart="0dp"
        android:text="@string/movie_category"
        android:textColor="@color/black"
        android:textSize="@dimen/movie_category_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>

</androidx.constraintlayout.widget.ConstraintLayout>