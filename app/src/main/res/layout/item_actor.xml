<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/actor_image_width"
        android:layout_height="@dimen/actor_image_height"
        app:cardCornerRadius="@dimen/corner_radius_actor_photo">

        <ImageView
            android:id="@+id/imgActorPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvActorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/actor_1_name"
        android:textColor="@color/black"
        android:textSize="@dimen/actor_name_text_size"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/actor_name_margin_top"/>

</LinearLayout>